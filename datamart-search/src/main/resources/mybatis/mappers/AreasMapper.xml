<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haier.datamart.mapper.AreasMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.haier.datamart.entity.Areas">
        <id column="id" property="id" />
        <result column="area_id" property="areaId" />
        <result column="name" property="name" />
        <result column="city_id" property="cityId" />
        <result column="lng_lat" property="lngLat" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, area_id AS areaId, name, city_id AS cityId, lng_lat AS lngLat
    </sql>

</mapper>
